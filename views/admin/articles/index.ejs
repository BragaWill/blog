<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<div class="container">
  <h2>Artigos</h2>
  <a class="btn btn-success mb-2" href="/admin/articles/new">Criar novo artigo</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% articles.forEach(article=> {%>
        <tr>
          <td>
            <%= article.id %>
          </td>
          <td>
            <%= article.name %>
          </td>
          <td>
            <%= article.slug %>
          </td>
          <td>
            <%= article.category.title %>
          </td>
          <td>
            <form method="POST" action='/articles/delete' class="d-inline" onsubmit="confirmarDelecao(event, this)">
              <input type="hidden" name="id" value="<%= article.id %>">
              <button class="btn btn-danger">Deletar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer') %>
<script>
  function confirmarDelecao(event, form) {
    event.preventDefault()
    var decision = confirm('Tem certeza que deseja excluir este artigo?')
    if (decision) {
      form.submit()
    }
  }
</script>