<%- include('../../partials/header') %>
<%- include('../../partials/homenavbar') %>

<body>
  <div class="container mt-3">
  <% result.articles.rows.forEach((article)=> {%>
    <div class="card mb-3">
      <div class="card-header">
        <h2>
          <%= article.name %>
        </h2>
      </div>
      <div class="card-body">
        <a class="btn btn-success" href="/<%=  article.slug %>">Ler artigo</a>
      </div>
    </div>
  <% }) %>
    <div class="row mt-3 mb-3">
      <div class="col col-12">
        <% if (result.page> 2) {%>
          <a href="/articles/page/<%= result.page - 1 %>" class="btn btn-outline-secondary float-start">
            <<< Prev</a>
        <% } else if (result.page===2) {%>
          <a href="/" class="btn btn-outline-secondary float-start"><<< Prev</a>
        <% } %>
        <% if (result.next) { %>
          <a href="/articles/page/<%= result.page + 1 %>" class="btn btn-outline-secondary float-end">Next >>> </a>
        <% } %>
      </div>
    </div>
  </div>
</body>

<%- include('../../partials/footer') %>