<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action='/articles/save'>
        <input class="form-control mb-3" type="text" name="name" placeholder="Defina o tÃ­tulo do artigo">
        <textarea class="form-control" name="body" placeholder="Escreva o artigo aqui" id="article"></textarea>
        <label class="mt-3 mb-3 form-label">Selecione a categoria:</label>
        <select name="category" class="form-select">
          <% categories.forEach((category)=> { %>
            <option value="<%= category.id %>">
              <%= category.title %>
            </option>
          <% }) %>
        </select>
        <button class="btn btn-success mt-3">Cadastrar</button>
      </form>
    </div>
  </div>
</div>
<%- include('../../partials/footer') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: '#article',
    language: 'pt_PT',
    plugins: [
      'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ]
  })
</script>