    <% articles.forEach((article)=> {%>
      <div class="card mb-3">
        <div class="card-header">
          <h2>
            <%= article.name %>
          </h2>
        </div>
        <div class="card-body">
          <a class="btn btn-success" href="/<%=  article.slug %>">Ler artigo</a>
        </div>
      </div>
    <% }) %>
    <div class="row mt-3 mb-3 float-end">
      <div class="col col-12">
        <a href="/articles/page/2" class="btn btn-outline-secondary">Next >>> </a>
      </div>
    </div>
  </div>
